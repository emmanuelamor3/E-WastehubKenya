<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort by Price"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />

    <RadioGroup
        android:id="@+id/rgPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rbPriceHighToLow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: High to Low" />

        <RadioButton
            android:id="@+id/rbPriceLowToHigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: Low to High" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Sort by Date"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />

    <RadioGroup
        android:id="@+id/rgDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rbDateNewest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: Newest to Oldest" />

        <RadioButton
            android:id="@+id/rbDateOldest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: Oldest to Newest" />
    </RadioGroup>

</LinearLayout>